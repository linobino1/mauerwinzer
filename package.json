    "@payloadcms/db-mongodb": "^1.4.0",
    "@payloadcms/plugin-cloud-storage": "1.0.19",
    "@payloadcms/richtext-slate": "^1.4.0",
    "@remix-run/css-bundle": "^2.8.0",
    "@remix-run/express": "^2.8.0",
    "@remix-run/node": "^2.8.0",
    "@remix-run/react": "^2.8.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.0.3",
    "email-validator": "^2.0.4",
    "escape-html": "^1.0.3",
    "express": "^4.18.2",
    "i18next": "^23.10.1",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-backend": "^2.5.0",
    "isbot": "^5.1.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "payload": "^2.11.1",
    "react": "^18.2.0",
    "react-cookie": "^7.1.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.0",
    "remix-i18next": "^5.5.0",
    "slate": "0.91.4",
    "slugify": "^1.6.5",
